<idea-plugin version="2">
  <id>ru.usb7.idea.plugin.perl</id>
  <name>Perl support</name>
  <version>1.0</version>
  <vendor email="support@usb7.ru" url="http://www.usb7.ru">FireFish</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <small>most HTML tags may be used</small>
      ]]></description>

  <change-notes><![CDATA[

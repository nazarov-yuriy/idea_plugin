      <lang.parserDefinition language="Perl" implementationClass="ru.usb7.idea.plugin.perl.PerlParserDefinition"/>
      <lang.syntaxHighlighterFactory key="Perl" implementationClass="ru.usb7.idea.plugin.perl.PerlSyntaxHighlighterFactory"/>
    <!-- Add your extensions here -->
  </extensions>
